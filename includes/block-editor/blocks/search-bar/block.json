{
  "apiVersion": 2,
  "title": "Yext Search Bar",
  "description": "Display a Yext search bar.",
  "name": "yext/search-bar",
  "category": "yext-blocks",
  "text-domain": "yext",
  "supports": {
    "className": false,
    "align": false
  },
  "attributes": {
    "submitText": {
      "type": "string"
    },
    "placeholderText": {
      "type": "string"
    },
    "labelText": {
      "type": "string"
    },
    "textColor": {
      "type": "string"
    },
    "fontSize": {
      "type": "number",
	  "default": 16
    },
    "fontWeight": {
      "type": "number"
    },
    "lineHeight": {
      "type": "number"
    },
    "borderRadius": {
      "type": "number",
	  "default": 6
    },
    "borderColor": {
      "type": "string"
    },
    "backgroundColor": {
      "type": "string"
    },
    "buttonBackgroundColor": {
      "type": "string"
    },
    "buttonHoverBackgroundColor": {
      "type": "string"
    },
    "autocompleteBackgroundColor": {
      "type": "string"
    },
    "autocompleteSeparatorColor": {
      "type": "string"
    },
    "autocompleteOptionHoverBackgroundColor": {
      "type": "string"
    },
    "autocompleteOptionFontSize": {
      "type": "number",
	  "default": 16
    },
    "autocompleteOptionFontWeight": {
      "type": "number",
	  "default": 400
    },
    "autocompleteOptionLineHeight": {
      "type": "number"
    },
    "autocompleteHeaderFontWeight": {
      "type": "number",
	  "default": 400
    }
  }
}
